<div class="wrapper">
<div class="timer-header">
  <%= link_to "キャンセル", root_path, class: "new-btn" %>
  <span>アラームを編集</span>
  <div> 
    <%= form_with model: @timer, url: timer_path, local: true do |f| %>
    <%= f.submit "保存", class:"submit" %>
  </div>
</div>
<div class="timer-main">
<div>
  <div>
    <%= f.text_field :name, value: @timer.name, class:"name-form", maxlength: "16" %>
  </div>
  <div>
    <%= f.text_field :hour, value: @timer.time.hour, class:"hour-form", maxlength: "2" %>
    <span> : </span>
    <%= f.text_field :minutes, value: @timer.time.min, class:"hour-form", maxlength: "2" %>
  </div>
  <div>
    <%= f.text_field :wday_id, value: "1", class:"hour-form" %>
  </div>
  <div>
    <%= f.text_field :onoff, value: true, class:"hour-form" %>
  </div>
  <div>
    <%= f.text_field :sound_id, value: "1", class:"hour-form" %>
  </div>
</div>
</div>
</div>
<% end %>
